# Environnement
NODE_ENV=development

# API du LLM
# URL de l'API du LLM (ex: OpenAI, Claude, ou un modèle local via Ollama)
REACT_APP_LLM_API_URL=http://localhost:5000/api/llm

# Clé API du LLM (optionnel si utilisation d'un modèle local)
REACT_APP_LLM_API_KEY=votre_cle_api_ici

# Configuration du serveur de développement
PORT=3000

# Configuration de la base de données RAG (optionnel)
# Pour une intégration avec des services comme Pinecone, Weaviate, ChromaDB
REACT_APP_RAG_API_URL=http://localhost:5001/api/rag
REACT_APP_RAG_API_KEY=votre_cle_rag_ici

# Configuration de la reconnaissance vocale (optionnel)
# Langue par défaut pour la reconnaissance vocale
REACT_APP_SPEECH_LANG=fr-FR